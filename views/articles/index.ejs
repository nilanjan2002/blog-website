    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
  </head>
  <body>
    <header class="position-relative">
      <h1 class="text-center mt-4 mb-4">Blog Website</h1>
      <a
        href="/articles/new"
        class="btn btn-primary position-absolute"
        style="right: 4rem; top: 1rem"
        >New Article</a
      >
    </header>
    <div
      class="container d-flex justify-content-center flex-wrap"
      style="gap: 30px"
    >
      <% articles.forEach(article => { %>
      <div class="card bg-light rounded-3" style="width: 35%">
        <img src="<%= article.image %>/300x200" class="card-img-top" alt="" />
        <div class="card-body d-flex flex-column">
          <div class="card-title text-center h3"><%= article.title %></div>
          <div class="card-subtitle mb-3 p text-muted fs-6">
            <%= article.date %>
          </div>
          <div class="card-text mb-2 flex-fill">
            <%= fn(article.description) %>
          </div>
          <span class="text-end mb-3" ><%= article.genre %></span>
          <div class="btn-group" role="group">
            <a
              href="articles/<%= article._id %>"
              class="btn btn-light text-dark"
              >Read More</a
            >
            <a href="" class="btn btn-dark mx-3">Edit</a>
            <form
              action="/articles/<%= article._id %>?_method=DELETE"
              method="POST"
            >
              <input
                type="submit"
                name="_method"
                value="DELETE"
                class="btn btn-outline-danger"
              />
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>
